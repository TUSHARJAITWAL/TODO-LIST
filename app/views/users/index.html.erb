<table class="table table-striped table-hover my-3">
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Address</th>
      <th scope="col">Action</th>
      <th></th>
      <th></th>
    
    </tr>
    </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr>
        <td class="pe-3"><%= image_tag user.profile_image, class:"rounded-circle",style: "width:50px; height:50px" %></td>        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.address %></td>
    
        <td><%= link_to 'Show',user,class: "btn btn-outline-warning" %></td> 
        <td><%= link_to 'Edit',edit_user_path(user),class: "btn btn-outline-info" %></td> 
        <td><%= button_to 'Destroy',user, method: :delete, onclick: "return confirm('Are you sure?')",class: "btn btn-outline-dark" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<div style="margin-left:20px;">
<%= paginate @users %>
</div>

