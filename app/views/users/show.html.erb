
<div class="card mb-3 my-4" style="max-width: 800px; margin-left:300px; background-color:#b9f0ea;">
  <div class="row g-0 py-5">
    <div class="col-md-4 ps-3 rounded-circle">
      <%= image_tag @user.profile_image, height: "200px", width: "200px", class: "rounded-circle" %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
      <h5 class="card-title"><strong>Name :--</strong><%= @user.name %></h5>
      <p class="card-text"><strong>Email      : -- </strong><%= @user.email %></p>
      <p class="card-text"><strong>Date of Birth      : -- </strong><%= @user.phone%></p>
      <p class="card-text"><strong>Age     : -- </strong><%= @user.address %></p>

      <a><%= link_to 'Back', users_path, class: "btn btn-outline-danger me-3" %></a>
      <a><%= link_to 'Edit', edit_user_path, class: "btn btn-outline-danger" %></a>
      </div>
    </div>
  </div>
</div>